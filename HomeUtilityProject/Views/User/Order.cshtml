@model HomeUtilityProject.Models.ORDER_TABLE

@{
    ViewBag.Title = "GassOrder";
}

<h2>GassOrder</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ORDER_TABLE</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="form-group">
        @Html.LabelFor(model => model.PROMO_ID, "PROMO_ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("PROMO_ID", null, htmlAttributes: new { @class = "form-control", id="DropDownId", onchange="SpotRate(this);" })
            @Html.ValidationMessageFor(model => model.PROMO_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <script>
        function SpotRate(e)
        {
            var spotnametxt = document.getElementById("DropDownId");
            var spotvalue = e.options[e.selectedIndex].value;
            if (spotvalue > 0)
            {
                var sellectedtext = e.options[e.selectedIndex].text;
                lblSelectedText.iinnerHTML = "New Rate" + sellectedtext;
            }
        }


    </script>

    <div class="form-group">
        @Html.LabelFor(model => model.NET_WAGE, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <h2 id="OpenSpace"></h2>
        </div>
    </div>
 

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
