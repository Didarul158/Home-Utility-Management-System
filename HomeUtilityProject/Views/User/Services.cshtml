}


<div class="jumbotron">
    <h1><b>@Html.DisplayFor(model => model.NAME)</b></h1>
    <div class="row">
        <div class="col-md-4">
            <h3><b>@Html.DisplayNameFor(model => model.EMAIL)</b></h3>
            <p>
                @Html.DisplayFor(model => model.EMAIL)
            </p>
        </div>
        <div class="col-md-4">
            <h3><b>@Html.DisplayNameFor(model => model.PHONE)</b></h3>
            <p> @Html.DisplayFor(model => model.EMAIL)</p>
        </div>
